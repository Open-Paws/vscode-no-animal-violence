{
  "name": "vscode-speciesism",
  "displayName": "Speciesist Language Scanner",
  "description": "Detects speciesist language in code and documentation, suggesting clearer alternatives",
  "version": "0.1.0",
  "publisher": "open-paws",
  "repository": {
    "type": "git",
    "url": "https://github.com/Open-Paws/vscode-speciesism"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Linters"
  ],
  "activationEvents": [
    "onLanguage:*"
  ],
  "main": "./extension.js",
  "contributes": {
    "configuration": {
      "title": "Speciesist Language Scanner",
      "properties": {
        "speciesism.severity": {
          "type": "string",
          "default": "warning",
          "enum": [
            "error",
            "warning",
            "information",
            "hint"
          ],
          "description": "Severity level for speciesist language findings"
        },
        "speciesism.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable speciesist language scanning"
        }
      }
    }
  },
  "license": "MIT"
}
